{% extends "layout.html.twig" %}

{% block content %}
<div class="container mt-4">
    <!-- Formulaire de recherche -->
    <form method="GET" action="{{ url_for('entreprises-list') }}" class="mb-4">
        <div class="form-group">
            <label for="search">Rechercher une entreprise par titre</label>
            <input type="text" name="search" id="search" class="form-control" value="{{ searchQuery }}">
        </div>
        <button type="submit" class="btn btn-primary">Rechercher</button>
    </form>

    <!-- Formulaire de sélection du domaine -->
    <form method="get" action="{{ url_for('entreprises-list') }}" class="d-flex mb-4">
        <select name="domaine_id" class="form-control me-2">
            <option value="">-- Filtrer par domaine --</option>
            {% for domaine in domaines %}
                <option value="{{ domaine.id }}" {% if selectedDomaine|default('') == domaine.id|default('') %}selected{% endif %}>
                    {{ domaine.nom }}
                </option>
            {% endfor %}
        </select>
        <button type="submit" class="btn btn-secondary">Filtrer</button>
    </form>

    {% if user.role == 'admin' or user.role == 'pilote' %}
        <a href="{{ url_for('entreprises-add') }}" class="btn btn-primary mb-4">Ajouter une entreprise</a>
    {% endif %}

    <div class="row">
        {% for entreprise in entreprises %}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ entreprise.titre }}</h5>
                        <p class="card-text"><strong>Email :</strong> {{ entreprise.email }}</p>
                        {% if entreprise.ville %}
                            <p class="card-text"><strong>Ville :</strong> {{ entreprise.ville }}</p>
                        {% endif %}
                        {% if entreprise.description %}
                            <p class="card-text"><strong>Description :</strong> {{ entreprise.description }}</p>
                        {% endif %}
                        {% if entreprise.contactTelephone %}
                            <p class="card-text"><strong>Téléphone :</strong> {{ entreprise.contactTelephone }}</p>
                        {% endif %}
                        {% if entreprise.nombreStagiaires %}
                            <p class="card-text"><strong>Nombre de stagiaires :</strong> {{ entreprise.nombreStagiaires }}</p>
                        {% endif %}
                        {% if entreprise.evaluationMoyenne %}
                            <p class="card-text"><strong>Évaluation moyenne :</strong> {{ entreprise.evaluationMoyenne }}</p>
                        {% endif %}
                        {% if entreprise.domaine %}
                            <p class="card-text"><strong>Domaine :</strong> {{ entreprise.domaine.nom }}</p>
                        {% endif %}

                        <a href="{{ url_for('entreprise-aperçu', {id: entreprise.id}) }}" class="btn btn-primary">Aperçu</a>

                        {% if user.role == 'admin' or user.role == 'pilote' %}
                            <a href="{{ url_for('entreprise-edit', {id: entreprise.id}) }}" class="btn btn-secondary">Modifier</a>
                            <a href="{{ url_for('entreprise-delete', {id: entreprise.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette entreprise ?')">Supprimer</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center">Aucune entreprise trouvée.</p>
        {% endfor %}
    </div>

    <!-- Pagination -->
    <div class="pagination">
        {% if currentPage > 1 %}
            <a href="{{ url_for('entreprise-paginatedList', {page: currentPage - 1}) }}" class="btn btn-link">Précédent</a>
        {% endif %}
        {% if currentPage < totalPages %}
            <a href="{{ url_for('entreprise-paginatedList', {page: currentPage + 1}) }}" class="btn btn-link">Suivant</a>
        {% endif %}
    </div>
</div>
{% endblock %}
