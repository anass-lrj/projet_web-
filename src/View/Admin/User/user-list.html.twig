{% extends "layout.html.twig" %}

{% block content %}
<div class="container mt-4">
    <a href="{{ url_for('user-add') }}" class="btn btn-primary mb-4">Ajouter un utilisateur</a>

    <!-- Formulaire de recherche -->
    <form method="GET" action="{{ url_for('user-search') }}" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <input type="text" name="prenom" class="form-control" placeholder="Prénom" value="{{ prenom }}">
            </div>
            <div class="col-md-4">
                <input type="text" name="nom" class="form-control" placeholder="Nom" value="{{ nom }}">
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </div>
        </div>
    </form>

    <div class="row">
        {% for user in users %}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ user.prenom }} {{ user.nom }}</h5>
                        <p class="card-text"><strong>Email :</strong> {{ user.email }}</p>
                        <p class="card-text"><strong>Date de naissance :</strong> {{ user.dateNaissance|date('d/m/Y') }}</p>
                        <p class="card-text"><strong>Date d'inscription :</strong> {{ user.dateCreation|date('d/m/Y H:i:s') }}</p>
                        <p class="card-text"><strong>Rôle :</strong> {{ user.role }}</p>
                                        <p class="card-text">Nombre de candidatures {{ userCandidatures[user.id]|default(0) }}</p> 



                        {% if currentUser.role == 'admin' %}
                            <a href="{{ url_for('user-edit', {idUser: user.id}) }}" class="btn btn-secondary">Modifier</a>
                            <a href="{{ url_for('user-delete', {idUser: user.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">Supprimer</a>
                        {% elseif currentUser.role == 'pilote' and user.role == 'user' %}
                            <a href="{{ url_for('user-edit', {idUser: user.id}) }}" class="btn btn-secondary">Modifier</a>
                            <a href="{{ url_for('user-delete', {idUser: user.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">Supprimer</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="pagination d-flex justify-content-center mt-4">
        {% if currentPage > 1 %}
            <a href="{{ url_for('user-list', {page: currentPage - 1}) }}" class="btn btn-outline-primary mx-2">Précédent</a>
        {% endif %}
        <span class="align-self-center">Page {{ currentPage }} sur {{ totalPages }}</span>
        {% if currentPage < totalPages %}
            <a href="{{ url_for('user-list', {page: currentPage + 1}) }}" class="btn btn-outline-primary mx-2">Suivant</a>
        {% endif %}
    </div>
</div>
{% endblock %}
